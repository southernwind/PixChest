<?xml version="1.0" encoding="utf-8"?>
<local:DetailPaneBase
    x:Class="PixChest.Views.Panes.DetailPanes.PropertiesDetail"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PixChest.Views.Panes.DetailPanes"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
		<ItemsView ItemsSource="{x:Bind ViewModel.TargetFile.Value.Properties, Mode=OneWay}">
			<ItemsView.ItemTemplate>
				<DataTemplate>
					<ItemContainer>
						<Grid>
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="100"/>
								<ColumnDefinition Width="100"/>
							</Grid.ColumnDefinitions>
							<TextBlock Grid.Column="0" Text="{Binding Title}"/>
							<TextBlock Grid.Column="1" Text="{Binding Value}"/>
						</Grid>
					</ItemContainer>
				</DataTemplate>
			</ItemsView.ItemTemplate>
		</ItemsView>
    </Grid>
</local:DetailPaneBase>
