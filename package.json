{
  "name": "pix-chest",
  "version": "1.0.0",
  "main": "dist/main.js",
  "scripts": {
    "dev": "rimraf dist && run-p dev:*",
    "dev:tsc": "tsc -w -p tsconfig.node.json",
    "dev:webpack": "cross-env NODE_ENV=\"development\" webpack --progress",
    "dev:electron": "wait-on ./dist/index.html ./dist/main.js && cross-env NODE_ENV=\"development\" electron .",
    "build": ".\\node_modules\\.bin\\electron-builder --win --x64"
  },
  "build": {
    "appId": "com.github.southenrwind.pix-chest",
    "directories": {
      "output": "packaged"
    },
    "files": [
      "assets",
      "dist",
      "package.json",
      "package-lock.json"
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.14.5",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "cross-env": "^7.0.3",
    "css-loader": "^7.1.2",
    "electron": "^31.0.1",
    "electron-builder": "^24.13.3",
    "electron-reload": "^2.0.0-alpha.1",
    "html-webpack-plugin": "^5.6.0",
    "mini-css-extract-plugin": "^2.9.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.7",
    "sass": "^1.77.6",
    "sass-loader": "^14.2.1",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "wait-on": "^7.2.0",
    "webpack": "^5.92.0",
    "webpack-cli": "^5.1.4"
  }
}